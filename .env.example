# Auth Provider Selection
# Options: api, firebase, prisma, baas, firestore
AUTH_PROVIDER=baas

# Your External Auth API (used when AUTH_PROVIDER=api)
AUTH_API_URL=http://localhost:3001
AUTH_API_KEY=
AUTH_API_TIMEOUT=10000

# ChatAI Web BaaS API Configuration (used when AUTH_PROVIDER=baas)
# For local development with emulators: http://localhost:5001/your-project-id/us-central1/api
# For GCP production: https://us-central1-your-project-id.cloudfunctions.net/api
CHATAI_API_URL=http://localhost:5001/your-project-id/us-central1/api
CHATAI_API_TOKEN=your-api-token-here
CHATAI_API_TIMEOUT=10000

# Firebase Web API Key (for Identity Toolkit authentication)
FIREBASE_WEB_API_KEY=

# Firebase Auth Credentials for GCP API access
# These credentials are used to authenticate with Firebase and get a token
# for accessing the ChatAI API (users, transactions endpoints)
FIREBASE_AUTH_EMAIL=abdulrahim.klis+11@ext.leadtech.com
FIREBASE_AUTH_PASSWORD=123456Aa!!

# Firebase Configuration (used when AUTH_PROVIDER=firebase)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Firestore Configuration (used when AUTH_PROVIDER=firestore)
# Database ID (for named databases, omit for '(default)')
FIRESTORE_DATABASE_ID=

# GCP Service Account Credentials (Option A - Recommended)
# Use environment variables for credentials
GCP_TYPE=service_account
GCP_PROJECT_ID=
GCP_PRIVATE_KEY_ID=
GCP_PRIVATE_KEY=
GCP_CLIENT_EMAIL=
GCP_CLIENT_ID=
GCP_AUTH_URI=https://accounts.google.com/o/oauth2/auth
GCP_TOKEN_URI=https://oauth2.googleapis.com/token
GCP_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
GCP_CLIENT_X509_CERT_URL=
GCP_UNIVERSE_DOMAIN=googleapis.com

# GCP Logging Configuration
# Log name that will appear in Google Cloud Logging
GCP_LOG_NAME=leadtech-crm

# Option B: Use key file path (fallback)
FIRESTORE_KEY_FILE=

# JWT Configuration (used when AUTH_PROVIDER=firestore)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRES_IN=3600
JWT_REFRESH_EXPIRES_IN=604800

# Default User (seeded on startup when AUTH_PROVIDER=firestore)
DEFAULT_USER_EMAIL=
DEFAULT_USER_PASSWORD=

# Server
PORT=3000
CORS_ORIGIN=http://localhost:5173
